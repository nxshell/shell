{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/types/**/*.d.ts",
        "/common/**/*.js"
    ],
    "vueCompilerOptions": {
        "target": 2.7,
        "extensions": [
            ".vue"
        ]
    }
}